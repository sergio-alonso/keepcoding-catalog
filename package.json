{
  "name": "@sergioalonso.es/keepcoding-catalog",
  "version": "0.1.0",
  "description": "Keepcoding Catalog",
  "keywords": [
    "keepcoding",
    "frontend"
  ],
  "homepage": "https://github.com/sergio-alonso/keepcoding-catalog#readme",
  "bugs": {
    "url": "https://github.com/sergio-alonso/keepcoding-catalog/issues",
    "email": "sergio@sergioalonso.es"
  },
  "license": "GPL-3.0",
  "author": "Sergio Alonso <sergio@sergioalonso.es> (http://www.sergioalonso.es)",
  "contributors": [
    "Alberto Casero <acasero@agbotraining.com> (http://www.agbotraining.com)"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/sergio-alonso/keepcoding-catalog.git"
  },
  "main": "index.js",
  "config": {
    "source": "src/",
    "dest": "public/"
  },
  "scripts": {
    "env": "env",
    "start": "npm run build && npm run server & npm run watch",
    "build:ico": "cp $npm_package_config_source/ico/*.ico $npm_package_config_dest/",
    "build:js": "browserify $npm_package_config_source/index.js > $npm_package_config_dest/index.js && browserify $npm_package_config_source/js/*.js > $npm_package_config_dest/script.js",
    "build:css": "node-sass $npm_package_config_source/index.scss -o $npm_package_config_dest && node-sass $npm_package_config_source/style.scss -o $npm_package_config_dest",
    "build:html": "pug --no-debug $npm_package_config_source/*.pug --out $npm_package_config_dest",
    "build": "npm run build:html & npm run build:css & npm run build:js & npm run build:ico",
    "watch:ico": "nodemon -e ico -x 'npm run build:ico'",
    "watch:js": "nodemon -w $npm_package_config_source -e js -x 'npm run build:js'",
    "watch:css": "nodemon -e scss -x 'npm run build:css'",
    "watch:html": "nodemon -e pug -x 'npm run build:html'",
    "watch": "npm run watch:html & npm run watch:css & npm run watch:js & npm run watch:ico",
    "server": "node index",
    "clean": "rm -fr $npm_package_config_dest/*; rm -fr *.tar"
  },
  "devDependencies": {
    "browser-sync": "^2.18.6",
    "browserify": "^14.0.0",
    "browserify-shim": "^3.8.13",
    "json-server": "^0.9.4",
    "node-sass": "^4.3.0",
    "nodemon": "^1.11.0",
    "npm-config": "^0.2.0",
    "pug": "^2.0.0-beta6",
    "pug-cli": "^1.0.0-alpha6",
    "semver": "^5.3.0"
  },
  "dependencies": {
    "serve": "^2.4.3",
    "tagmanager": "^1.0.0"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "browserify-shim": {
    "jquery": "global:$",
    "moment": "global:moment"
  },
  "engines": {
    "npm": ">=3.10"
  },
  "private": true
}
